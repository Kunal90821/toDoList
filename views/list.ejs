<%- include("header") %>
    <section class="container">
        <div class="heading">
            <img class="heading__img" src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/756881/laptop.svg">
            <h1 class="heading__title"><%=listTitle%></h1>
        </div>
        <form class="form" method="post" action="/">
            <div>
                <label class="form__label" for="todo">~ Today I need to ~</label>
                <input class="form__input" type="text" id="todo" name="newItem" size="30" required autocomplete="off"/>
                <button class="button" type="submit" name="list" value="<%= listTitle %>"><span>Submit</span></button>
            </div>
        </form>
        <div>
            <ul class="toDoList">
                <% if(locals.items) { %>
                    <% items.forEach((item)=>{ %>
                        <form action="/delete" method="post">
                            <li>
                                <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%= item._id %>">
                                <%= item.name %>
                            </li>
                            <input type="hidden" name="listName" value="<%= listTitle %>"></input>
                        </form>
                   <% });} %>
            </ul>
        </div>
    </section>

</body>

</html>